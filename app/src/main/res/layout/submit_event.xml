<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
                android:focusableInTouchMode="true"
    tools:context=".SubmitEvent">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="EVENT NAME"
                android:textColor="#333"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/eNameTxt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-condensed"
                android:hint="ex: Freshaz Bash in JKUAT"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="30dp"
                android:text="EVENT DESCRIPTION"
                android:textColor="#333"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/eDescriptionTxt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView2"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-condensed"
                android:hint="type your event's description..."
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/textview3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="30dp"
                android:text="COST"
                android:textColor="#333"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/ecostTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView2"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-condensed"
                android:hint="ex: Ksh 500 (or even FREE)"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="30dp"
                android:text="EVENT ADDRESS"
                android:textColor="#333"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/eLocationTxt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/eCosttxt"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-condensed"
                android:hint="ex: Juja, Thika, Kenya"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/txt6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="30dp"
                android:text="WEBSITE ADDRESS"
                android:textColor="#333"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/eWebTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/eCosttxt"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-condensed"
                android:hint="ex: http://myeventdomain.com"
                android:imeOptions="actionDone"
                android:inputType="textWebEditText"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/textvi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="30dp"
                android:text="EVENT START DATE &amp; TIME"
                android:textColor="#333"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/eStartDateButt"
                    android:layout_width="140dp"
                    android:layout_height="44dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/holo_blue_light"
                    android:text="TAP TO SET START DATE"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="10sp"/>

                <Button
                    android:id="@+id/eStartTimeButt"
                    android:layout_width="140dp"
                    android:layout_height="44dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/holo_blue_light"
                    android:text="TAP TO SET START TIME"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="10sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/eStartDateButt"
                android:layout_marginTop="30dp"
                android:text="EVENT END DATE &amp; TIME"
                android:textColor="#333"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/eEndDateButt"
                    android:layout_width="140dp"
                    android:layout_height="44dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView4"
                    android:background="@android:color/holo_green_light"
                    android:text="TAP TO SET END DATE"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="10sp"/>

                <Button
                    android:id="@+id/eEndTimeButt"
                    android:layout_width="140dp"
                    android:layout_height="44dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView4"
                    android:layout_marginLeft="20dp"
                    android:background="@android:color/holo_green_light"
                    android:text="TAP TO SET END TIME"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="10sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/evImage"
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/logo"/>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Tap to upload an image "
                    android:textAlignment="center"
                    android:textColor="#333"
                    android:textSize="12sp"
                    android:typeface="sans"/>

            </LinearLayout>

            <Button
                android:id="@+id/submitButt"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:background="@color/accent_material_light"
                android:fontFamily="sans-serif"
                android:text="SUBMIT EVENT FOR REVIEW"
                android:textColor="#fff"
                android:textSize="14sp"
                android:textStyle="normal|bold"/>

        </LinearLayout>
    </ScrollView>


    <!-- TAB BAR -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/linearLayout2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/tab_one"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/tab_home"
            android:paddingTop="28dp"
            android:text="Home"
            android:textAllCaps="false"
            android:textSize="8dp"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/tab_two"
            android:textAllCaps="false"
            android:background="@drawable/tab_submit"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="60dp"
            android:paddingTop="30dp"
            android:text="Submit Event"
            android:backgroundTint="@color/accent_material_light"
            android:textColor="@color/accent_material_light"

            android:textSize="8dp" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/tab_three"
            android:textAllCaps="false"
            android:background="@drawable/tab_contact"
            android:layout_marginLeft="60dp"
            android:paddingTop="28dp"
            android:text="Contact"
            android:textSize="10dp"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>


</RelativeLayout>
